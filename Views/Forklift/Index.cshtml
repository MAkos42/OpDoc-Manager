@{
    ViewData["Title"] = "Home Page";

    List<ForkliftModelSelectorDTO> modelNames = (List<ForkliftModelSelectorDTO>)ViewBag.ModelNames;
}
@using OpDoc_Manager.Models.DTO
@using OpDoc_Manager.Models

@model Forklift[]

<div class="row">
    @foreach (var forklift in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <a href="@Url.Action("Edit","Forklift", new {id = forklift.UniqueId})" class="text-decoration-none text-black">
                    <div class="card-body highlight-on-hover">
                        <h5 class="card-title">@forklift.General.ProductionNumber - @forklift.General.Name</h5>
                        <p class="card-text">
                            Gyártási év: @forklift.General.ManufacturingYear
                        </p>
                    </div>
                </a>
            </div>
        </div>
    }
    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <a href="@Url.Action("Create","Forklift", new {id = Guid.Empty})">
                    <div class="card-body d-flex align-items-center justify-content-center highlight-on-hover" style="height:136px">
                        <i class="bi bi-plus-circle"></i>
                    </div>
                </a>
            </div>
        </div>
    }

</div>
