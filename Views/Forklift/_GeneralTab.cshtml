@{
    List<SelectListItem> modelSelector = (List<SelectListItem>)ViewBag.ModelNames;
}

@model Forklift.GeneralInformation;


<div class="tab-pane fade col-11" id="general" role="tabpanel" aria-labelled-by="general-tab">



    <div class="row mb-3">

        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text" style="width:20%">
                    @Html.LabelFor(g=>g.Name, "Megnevezés:")
                </span>
                @Html.TextBoxFor(g=>g.Name, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.Name, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>


    <div class="row mb-3">

        <div style="width:43.5%">
            <div class="input-group">
                <span class="input-group-text col-md-4">
                    @Html.LabelFor(g=>g.ModelId, "Targonca Modell:")
                </span>
                @Html.DropDownListFor(g=>g.ModelId, modelSelector, new {@class = "form-dropdown select2"})
                @Html.ValidationMessageFor(g=>g.ModelId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="col-md-11">
                <div class="input-group">
                    <span class="input-group-text col-md-7">
                        @Html.LabelFor(g=>g.ManufacturingYear, "Gyártás éve:")
                    </span>
                    @Html.TextBoxFor(g=>g.ManufacturingYear, new {@class = "form-control hide-input", type="number"})
                    @Html.ValidationMessageFor(g=>g.ManufacturingYear, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>


    <div class="row mb-3">

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.ProductionNumber, "Gyártási szám:")
                </span>
                @Html.TextBoxFor(g=>g.ProductionNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.ProductionNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-7">
                    @Html.LabelFor(g=>g.EntryIntoService, "Első üzembehelyezés:")
                </span>
                @Html.TextBoxFor(g=>g.EntryIntoService, "{0:yyyy-MM-dd}", new {@class = "form-control", type="date"})
                @Html.ValidationMessageFor(g=>g.EntryIntoService, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>


    <div class="row mb-3">

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.EngineProductionNumber, "Motorszám:")
                </span>
                @Html.TextBoxFor(g=>g.EngineProductionNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.EngineProductionNumber, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.select2').select2({
                width: '66.7%',
                allowClear: true
            });
        });
    </script>

</div>
