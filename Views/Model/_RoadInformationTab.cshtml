                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text col-md-8">
                            @Html.LabelFor(ri => ri.BreakingForce, "Üzemi fékrendszer: (N)")
                        </span>
                        @Html.TextBoxFor(ri => ri.BreakingForce, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.BreakingForce, "", validationAttributes)
