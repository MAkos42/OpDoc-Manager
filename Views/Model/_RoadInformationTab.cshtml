@{
    Html.ViewData.TemplateInfo.HtmlFieldPrefix = "RoadInformation";

    var numInputAttributes = (object)ViewBag.numInputAttributes;
    var textboxAttributes = (object)ViewBag.textboxAttributes;
    var validationAttributes = (object)ViewBag.validationAttributes;
}

@model Forklift.RoadInformation

<div class="tab-pane fade col-11" id="roadinfo" role="tabpanel" aria-labelled-by="roadinfo-tab">
    <div class="card">
        <div class="card-body">

            <div class="row mb-3">

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.Width, "Haladási szélesség: (mm)")
                        </span>
                        @Html.TextBoxFor(ri => ri.Width, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.Width, "", validationAttributes)
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.Length, "Üzemi Hossz: (mm)")
                        </span>
                        @Html.TextBoxFor(ri => ri.Length, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.Length, "", validationAttributes)
                    </div>
                </div>

            </div>


            <div class="row mb-3">

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.OperationalWeight, "Saját tömeg üzemkész állapotban: (kg)")
                        </span>
                        @Html.TextBoxFor(ri => ri.OperationalWeight, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.OperationalWeight, "", validationAttributes)
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.GroundClearance, "Út feletti szabad magasság: (mm)")
                        </span>
                        @Html.TextBoxFor(ri => ri.GroundClearance, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.GroundClearance, "", validationAttributes)
                    </div>
                </div>

            </div>


            <div class="row mb-3">

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.HeightTransportPosition, "Magasság teherfogó szállítási helyzetében: (mm)")
                        </span>
                        @Html.TextBoxFor(ri => ri.HeightTransportPosition, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.HeightTransportPosition, "", validationAttributes)
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.HeightMastLowered, "Legnagyobb szerkezeti magasság szállításkor: (mm)")
                        </span>
                        @Html.TextBoxFor(ri => ri.HeightMastLowered, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.HeightMastLowered, "", validationAttributes)
                    </div>
                </div>

            </div>


            <div class="row mb-3">

                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text col-md-10">
                            @Html.LabelFor(ri => ri.HeightMastRaised, "Legnagyobb szerkezeti magasság legnagyobb emelési magasságnál: (mm)")
                        </span>
                        @Html.TextBoxFor(ri => ri.HeightMastRaised, numInputAttributes)
                        @Html.ValidationMessageFor(ri => ri.HeightMastRaised, "", validationAttributes)
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text col-md-9">
