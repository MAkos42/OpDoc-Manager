@{
    var forkliftTypeSelector = new List<SelectListItem> {
        new SelectListItem("Emelőtargonca", "LIFT"),
        new SelectListItem("Vontatótargonca","TOW"),
        new SelectListItem("Szállítótargonca", "TRANSPORT")};

    var operatorTypeSelector = new List<SelectListItem> {
        new SelectListItem("Vezetőüles", "SEATED"),
        new SelectListItem("Vezetőállás", "STANDING"),
        new SelectListItem("Gyalogkíséret", "PEDESTRIAN")
    };

    var powerSourceSelector = new List<SelectListItem> {
        new SelectListItem("Dízel", "DIESEL"),
        new SelectListItem("Benzin", "GASOLINE"),
        new SelectListItem("Földgáz", "NATGAS"),
        new SelectListItem("Elektromos", "ELECTRIC"),

    };
}

@model Forklift.GeneralInformation;


<div class="tab-pane fade col-11 show active" id="general" role="tabpanel" aria-labelled-by="general-tab">



    <div class="row mb-3">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text" style="width:20%">
                    @Html.LabelFor(g=>g.Name, "Megnevezés:")
                </span>
                @Html.TextBoxFor(g=>g.Name, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.Manufacturer, "Gyártó:")
                </span>
                @Html.TextBoxFor(g=>g.Manufacturer, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.Manufacturer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.Model, "Típusjelzés:")
                </span>
                @Html.TextBoxFor(g=>g.Model, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.Model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="col-md-11">
                <div class="input-group">
                    <span class="input-group-text col-md-7">
                        @Html.LabelFor(g=>g.ManufacturingYear, "Gyártás éve:")
                    </span>
                    @Html.TextBoxFor(g=>g.ManufacturingYear, new {@class = "form-control hide-input", type="number"})
                    @Html.ValidationMessageFor(g=>g.ManufacturingYear, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.ProductionNumber, "Gyártási szám:")
                </span>
                @Html.TextBoxFor(g=>g.ProductionNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(g=>g.ProductionNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-7">
                    @Html.LabelFor(g=>g.EntryIntoService, "Első üzembehelyezés:")
                </span>
                @Html.TextBoxFor(g=>g.EntryIntoService, "{0:yyyy-MM-dd}", new {@class = "form-control", type="date"})
                @Html.ValidationMessageFor(g=>g.EntryIntoService, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.ForkliftType, "Targonca típusa:")
                </span>
                @Html.DropDownListFor(g=>g.ForkliftType, forkliftTypeSelector, new {@class = "form-select"})
                @Html.ValidationMessageFor(g=>g.ForkliftType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text col-md-5">
                    @Html.LabelFor(g=>g.OperatorType, "Kezelés módja:")
                </span>
                @Html.DropDownListFor(g=>g.OperatorType, operatorTypeSelector, new {@class = "form-select"})
                @Html.ValidationMessageFor(g=>g.OperatorType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="col-md-11">
                <div class="input-group">
                    <span class="input-group-text col-md-7">
                        @Html.LabelFor(g=>g.PowerSource, "Működtetőenergia:")
                    </span>
                    @Html.DropDownListFor(g=>g.PowerSource, powerSourceSelector, new {@class = "form-select"})
                    @Html.ValidationMessageFor(g=>g.PowerSource, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>



</div>
