@using OpDoc_Manager.Models
@model Forklift


@using (Html.BeginForm("Save", "ViewController", FormMethod.Post))
{
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a href="#general" class="nav-link" id="general-tab" role="tab" data-bs-toggle="tab" aria-controls="general" aria-selected="true">Általános</a>
            </li>
            <li class="nav-item">
                <a href="#operator" class="nav-link" id="operator-tab" role="tab" data-bs-toggle="tab" aria-controls="operator">Tulajdonos</a>
            </li>
            <li class="nav-item">
                <a href="#operation" class="nav-link" id="operation-tab" role="tab" data-bs-toggle="tab" aria-controls="operation">Üzemeltetés</a>
            </li>
            <li class="nav-item">
                <a href="#manual" class="nav-link" id="manual-tab" role="tab" data-bs-toggle="tab" aria-controls="manual">Használati Utasítás</a>
            </li>
            <li class="nav-item">
                <a href="#technical" class="nav-link active" id="modeldata-tab" role="tab" data-bs-toggle="tab" aria-controls="modeldata">Műszaki Adatok</a>
            </li>
        </ul>
    </nav>

    <div class="tab-content">

        <!-- General Information -->
        @await Html.PartialAsync("_GeneralTab",Model.General)

        <!-- Operator -->
        @await Html.PartialAsync("_OperatorTab",Model.Operator)

        <!-- Operation -->
        @await Html.PartialAsync("_OperationTab", Model.Operator)

        <!-- User Manual -->
        @await Html.PartialAsync("_UserManualTab", Model.UserManual)

        <!-- Technical Information -->
        @await Html.PartialAsync("_ModelDataTab", Model.General.Model)




        <!-- Add more tab content sections as needed -->
    </div>

}
